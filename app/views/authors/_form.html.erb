<%= form_for(@author) do |f| %>

	<div id="form-group">
		<%= f.label :first_name %>
		<%= f.text_field :first_name, class: "form-control" %>
	</div>

	<div id="form-group">
		<%= f.label :last_name %>
		<%= f.text_field :last_name, class: "form-control" %>
	</div>
	<%= f.submit "Create Author", class: "btn btn-primary" %>

<% end %>